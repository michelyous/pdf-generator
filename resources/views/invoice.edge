<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice for {{ recipient.name }}</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @font-face {
    font-family: 'CircularStd-Medium';
    src: url('/font/CircularStd-Medium.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    }
    body {
    font-family: 'CircularStd-Medium', sans-serif;
    }
    table {
        width: 100%;
    }
    .custom-border {
      border: 1px solid rgba(191,191,191,255);
    }
    .mt-100 {
        margin-top: 100px;
    }
    .responsive-image {
        width: 100%;
        height: auto;
    }
    .big-padding{
        padding-bottom: 35rem;
    }
  </style>
</head>
<body class="bg-gray-100 m-6">

    @containers.print({ as: 'main' })
    <div class="mb-12">   
        <img src="/images/COMIN_LOGO_BLACK_HD.png" alt="COMIN logo" width="125px" height="50px"/> 
    </div>

    <div class="pb-6">
        <table>
            <tr>
                <td class="font-semibold" style="width: 50%;" align="left">
                    Destinataire
                </td>
        
